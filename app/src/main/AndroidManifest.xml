<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.termproject">


    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <receiver android:name="com.example.termproject.WidgetProvider"
            android:label="GPS based">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_provider_basic"/>
        </receiver>

        <meta-data android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"/>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SettingActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar2">
        </activity>
        <activity
            android:name=".AddScheduleActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar2"
            >

        </activity>
        <activity
            android:name=".DatacheckActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar2"
            >
        </activity>
        <activity
            android:name=".RewriteActivity"
            android:label="위치 기반 스케줄러"
            android:theme="@style/AppTheme.NoActionBar2"
            >
        </activity>
        <activity
            android:name=".MapActivity"
            android:label="위치 기반 스케줄러">
            <!--android:theme="@style/AppTheme.NoActionBar2"-->

        </activity>
        <activity
            android:name=".SelHowLocPopupActivity"
            android:label="장소 추가"
            android:theme="@style/Theme.AppCompat.DayNight.Dialog.Alert">

        </activity >

    </application>

</manifest>