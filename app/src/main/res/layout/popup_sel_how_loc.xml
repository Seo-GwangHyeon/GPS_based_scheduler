<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="300dp"
    tools:context=".AddScheduleActivity">

    <Button
        android:id="@+id/inperon_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="직접지정"
        app:layout_constraintBottom_toTopOf="@+id/range_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/range_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="범주로 설정"
        app:layout_constraintBottom_toTopOf="@+id/not_button"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/not_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="136dp"
        android:text="지정안함"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />
</android.support.constraint.ConstraintLayout>

