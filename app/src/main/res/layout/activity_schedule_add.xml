<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/schedule_add_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddScheduleActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <EditText
            android:id="@+id/add_schedule"
            android:layout_width="348dp"
            android:layout_height="177dp"
            android:inputType="textMultiLine"
            android:selectAllOnFocus="false"
            android:layout_below="@+id/schedule"
            android:text="예시)약국가기"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Schedule"
            />

        <CheckBox
            android:id="@+id/check_alarm"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_location"
            android:layout_marginTop="20dp"
            android:text="            알람 설정"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/add_location"
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_schedule"
            android:layout_marginTop="26dp"
            android:text="장소 추가"
            android:layout_centerHorizontal="true"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="52dp"
                android:layout_weight="1"

                android:text="저장" />

            <Button
                android:id="@+id/cancel"
                style="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="취소" />
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

